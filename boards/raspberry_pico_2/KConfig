config BOARD_RASPBERRY_PICO_2
  bool "Raspberry Pico 2"

config BOARD
  def_string "raspberry_pico_2" if BOARD_RASPBERRY_PICO_2
  depends on BOARD_RASPBERRY_PICO_2

if BOARD_RASPBERRY_PICO_2
  choice CHOICE_CPU
    default CPU_RP2350
  endchoice

  config LINKER_SCRIPT_PATH
    default "${hal_root}/source/cortex-m33/raspberry/rp2350/linker_script.ld" 

  config BUNDLE_COMPILER_RT
    default n 

  config FLASH_MEMORY_ADDRESS
    default "0x10000000"
  
  config FLASH_MEMORY_SIZE
    default "2MB"
endif

