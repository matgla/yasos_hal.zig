config CPU_RP2350
  bool "RP2350"

config CPU
  def_string "rp2350" if CPU_RP2350
  depends on CPU_RP2350

if CPU_RP2350
  choice CHOICE_CPU_ARCHITECTURE
    default CPU_ARCH_CORTEX_M33
  endchoice

  choice CHOICE_CPU_FAMILY 
    default CPU_FAMILY_RASPBERRY 
  endchoice
endif 